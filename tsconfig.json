{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "display": "Node 14",
  "exclude": ["node_modules", "dist", "example", "coverage"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
