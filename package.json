{
  "name": "dyal",
  "version": "1.0.10",
  "description": "DYAL for Decouple Your Application Layer. It's a ligth & simple application layer framework with CQRS utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prebuild": "npm run doc && npm run test && npm run test:cucumber:html",
    "build": "tsc",
    "check:types": "tsc --noEmit",
    "doc": "typedoc --options typedoc.json",
    "test": "jest",
    "test:all": "npm test && npm run test:cucumber",
    "test:cucumber": "cucumber-js",
    "test:cucumber:html": "cucumber-js -p html > docs/features-report.html",
    "test:cucumber:pretty": "cucumber-js -p pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SachaCR/dyal.git"
  },
  "author": "SachaCR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SachaCR/dyal/issues"
  },
  "homepage": "https://github.com/SachaCR/dyal#readme",
  "keywords": [
    "CQRS",
    "DDD",
    "application layer",
    "domain driven",
    "framework"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "8.2.2",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.0",
    "jest": "27.5.1",
    "jest-html-reporters": "3.0.9",
    "ts-jest": "27.1.5",
    "ts-node": "10.7.0",
    "typedoc": "0.22.17",
    "typescript": "4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "docs/jest",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./docs/test-report",
          "filename": "index.html",
          "openReport": true,
          "pageTitle": "Dyal tests report"
        }
      ]
    ]
  },
  "volta": {
    "node": "18.0.0",
    "npm": "8.12.1"
  }
}
