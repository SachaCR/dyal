{
  "name": "dyal",
  "version": "1.0.4",
  "description": "DYAL for Decouple Your Application Layer. It's a ligth & simple application layer framework with CQRS utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "prebuild": "npm run doc && npm run test && npm run test:cucumber:html",
    "build": "tsc",
    "check:types": "tsc --noEmit",
    "doc": "typedoc --options typedoc.json",
    "test": "NODE_ENV=test jest",
    "test:cucumber": "cucumber-js",
    "test:cucumber:html": "cucumber-js -p html > docs/features-report.html",
    "test:cucumber:pretty": "cucumber-js -p pretty",
    "preversion": "npm run doc && npm test && npm run test:cucumber:html",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SachaCR/dyal.git"
  },
  "author": "SachaCR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SachaCR/dyal/issues"
  },
  "homepage": "https://github.com/SachaCR/dyal#readme",
  "keywords": [
    "CQRS",
    "DDD",
    "application layer",
    "domain driven",
    "framework"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@cucumber/pretty-formatter": "^1.0.0-alpha.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "docs/jest",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.1"
  }
}
