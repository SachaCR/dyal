{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node16/tsconfig.json",
  "display": "Node 16",
  "exclude": ["node_modules", "dist", "features", "cucumber.js"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
